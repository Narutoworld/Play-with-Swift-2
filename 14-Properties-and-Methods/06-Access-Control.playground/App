import Foundation

public class App{
    
    private let ui = UI()
    public var name: String
    
    public init(name: String){
        self.name = name
    }
    public func switchMode(){
        switch ui.themeMode{
        case Theme.DayMode:
            ui.themeMode = Theme.NightMode
        case Theme.NightMode:
            ui.themeMode = Theme.DayMode
        }
    }
    public func show(){
        print("The app name is \(name)")
        ui.show()
    }
}
